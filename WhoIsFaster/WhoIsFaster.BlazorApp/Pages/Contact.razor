@page "/contact"

<h3 style="text-align: center; margin-bottom:25px;">Contact Form</h3>

@if(!displaySendAlert){
        <EditForm Model="@_ContactFormModel" OnValidSubmit="@HandleValidSubmit"
                  OnInvalidSubmit="@HandleInvalidSubmit">
            <DataAnnotationsValidator />

            <div class="form-group">
                <label for="name" class="col-sm-3">Name: </label>
                <InputText id="name" class="form-control col-sm-8" @bind-Value="@_ContactFormModel.Name" placeholder="Enter name"></InputText>
            </div>


            <div class="form-group">
                <label for="email" class="col-sm-3">Email: </label>
                <InputText id="email" class="form-control col-sm-8" @bind-Value="@_ContactFormModel.Email" placeholder="Enter email"></InputText>
            </div>


            <div class="form-group">
                <label for="phonenumber" class="col-sm-3">Phone number: </label>
                <InputText id="phonenumber" class="form-control col-sm-8" @bind-Value="@_ContactFormModel.Phone" placeholder="Enter phone number"></InputText>
            </div>

            <div class="form-group">
                <label for="message" class="col-sm-3">Message: </label>
                <InputTextArea id="message" class="form-control col-sm-8" rows="3" @bind-Value="@_ContactFormModel.Message" placeholder="Enter message"></InputTextArea>
            </div>

            <button style="margin-bottom: 20px;" type="submit" class="btn btn-primary edit-btn">Contact us</button>

            <ValidationSummary />
        </EditForm>
}else{
    <div style="text-align: center" class="alert alert-success">Thank you for contacting us! <br>
You are very important to us, all information received will always remain confidential. <br> We will contact you as soon as we review your message.</div>
}  
